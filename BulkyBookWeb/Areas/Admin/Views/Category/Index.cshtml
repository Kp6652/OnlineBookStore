@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-vector-pen"></i> &nbsp;Create New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" stylel="widhth:100">
<thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Display Order</th>
        <th>Order Date</th>
        <th>Action</th>
    </tr>
</thead>
<tbody>
    @foreach(var obj in Model)
        {
            <tr>
                <td widhth="20%">@obj.Id</td>
                <td widhth="40%">@obj.Name</td>
                <td widhth="20%">@obj.DisplayOrder</td>
                <td widhth="20%">@obj.CreateDateTime</td>
                <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id">
                        <i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                    <a asp-action="Details" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                        <i class="bi bi-ticket-detailed"></i>&nbsp; Details</a>
                    <a asp-controller="Category" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id">
                        <i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
                </div>
                </td>
            </tr>
        }
    </tbody>
</table>